<Page x:Class="Onewheel.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:Onewheel.Controls"
      xmlns:controls1="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Loaded="Page_Loaded"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Height="50"
              Background="{ThemeResource SystemControlHighlightAltListAccentLowBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="batteryPerc_tbx"
                       Grid.Column="0"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       FontSize="25"/>

            <Grid Grid.Column="1"
                  Margin="10,0,10,0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="boardName_tbx"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           FontSize="20"
                           TextTrimming="CharacterEllipsis"/>
                <Button x:Name="editName_btn"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Click="editName_btn_Click"
                        Content="&#xE70F;"
                        FontFamily="Segoe MDL2 Assets"
                        Visibility="Collapsed"/>
            </Grid>

            <TextBlock x:Name="batteryIcon_tbx"
                       Grid.Column="2"
                       Margin="0,0,10,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="25"/>
        </Grid>

        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <controls:SeperatorControl Grid.Row="0"
                                           Text="General:"/>
                <GridView Grid.Row="1"
                          Margin="10"
                          HorizontalAlignment="Center"
                          IsItemClickEnabled="False"
                          SelectionMode="None">
                    <!--  Speed:  -->
                    <controls:BoardInfoControl x:Name="speed_bic"
                                               DescriptionPrimary="KM/H"
                                               DescriptionSecondary="Speed"
                                               Value="0"/>

                    <!--  Range:  -->
                    <controls:BoardInfoControl x:Name="range_bic"
                                               DescriptionPrimary="KM"
                                               DescriptionSecondary="Range"
                                               Value="-"/>
                    <!--  Riding mode:  -->
                    <controls:BoardRidingModeControl x:Name="ridingMode_brmc"/>

                    <!--  Lighting mode:  -->
                    <controls:BoardLightModeControl x:Name="lightingMode_blmc"/>
                </GridView>

                <controls:SeperatorControl Grid.Row="2"
                                           Text="Trip:"/>
                <GridView Grid.Row="3"
                          Margin="10"
                          HorizontalAlignment="Center"
                          IsItemClickEnabled="False"
                          SelectionMode="None">
                    <!--  Top speed trip:  -->
                    <controls:BoardInfoControl x:Name="topSpeedTrip_bic"
                                               DescriptionPrimary="KM/H"
                                               DescriptionSecondary="Top speed"
                                               Value="0"/>

                    <!--  Odometer trip:  -->
                    <controls:BoardInfoControl x:Name="odometerTrip_bic"
                                               DescriptionPrimary="KM"
                                               DescriptionSecondary="Trip"
                                               Value="-"/>

                    <!--  Ampere hours trip:  -->
                    <controls:BoardInfoControl x:Name="ampereHoursTrip_bic"
                                               DescriptionPrimary="Ah"
                                               DescriptionSecondary="Trip"
                                               Value="-"/>

                    <!--  Ampere hours regen trip:  -->
                    <controls:BoardInfoControl x:Name="ampereHoursRegenTrip_bic"
                                               DescriptionPrimary="Ah"
                                               DescriptionSecondary="Regen"
                                               Value="-"/>
                </GridView>

                <controls:SeperatorControl Grid.Row="4"
                                           Text="Live:"/>
                <GridView Grid.Row="5"
                          Margin="10"
                          HorizontalAlignment="Center"
                          IsItemClickEnabled="False"
                          SelectionMode="None">
                    <!--  Top speed live:  -->
                    <controls:BoardInfoControl x:Name="topSpeedLive_bic"
                                               DescriptionPrimary="KM/H"
                                               DescriptionSecondary="Top speed"
                                               Value="0"/>

                    <!--  Odometer live:  -->
                    <controls:BoardInfoControl x:Name="odometerLive_bic"
                                               DescriptionPrimary="KM"
                                               DescriptionSecondary="Live"
                                               Value="-"/>

                    <!--  Ampere hours live:  -->
                    <controls:BoardInfoControl x:Name="ampereHoursLive_bic"
                                               DescriptionPrimary="Ah"
                                               DescriptionSecondary="Live"
                                               Value="-"/>
                </GridView>

                <controls:SeperatorControl Grid.Row="6"
                                           Text="Battery:"/>
                <GridView Grid.Row="7"
                          Margin="10"
                          HorizontalAlignment="Center"
                          IsItemClickEnabled="False"
                          SelectionMode="None">
                    <!--  Battery voltage:  -->
                    <controls:BoardInfoControl x:Name="batteryVoltage_bic"
                                               DescriptionPrimary="V"
                                               DescriptionSecondary="Battery"
                                               Value="0"/>

                    <!--  Battery ampere:  -->
                    <controls:BoardInfoControl x:Name="batteryAmpere_bic"
                                               DescriptionPrimary="A"
                                               DescriptionSecondary="Battery"
                                               Value="-"/>
                </GridView>

                <controls:SeperatorControl Grid.Row="8"
                                           Margin="0,10,0,0"
                                           Text="Misc:"/>
                <GridView Grid.Row="9"
                          Margin="10"
                          HorizontalAlignment="Center"
                          IsItemClickEnabled="False"
                          SelectionMode="None">
                    <!--  Battery temperature:  -->
                    <controls:BoardInfoControl x:Name="batteryTemp_bic"
                                               DescriptionPrimary="°C"
                                               DescriptionSecondary="Battery"
                                               Value="0"/>

                    <!--  Motor temperature:  -->
                    <controls:BoardInfoControl x:Name="motorTemp_bic"
                                               DescriptionPrimary="°C"
                                               DescriptionSecondary="Motor"
                                               Value="-"/>

                    <!--  Controller temperature:  -->
                    <controls:BoardInfoControl x:Name="controllerTemp_bic"
                                               DescriptionPrimary="°C"
                                               DescriptionSecondary="Controller"
                                               Value="-"/>
                    <!--  Prevent screen lock  -->
                    <controls:PreventScreenLockControl/>
                </GridView>
            </Grid>
        </ScrollViewer>

        <controls1:InAppNotification x:Name="info_notification"
                                     Grid.Row="1"/>
    </Grid>
</Page>
