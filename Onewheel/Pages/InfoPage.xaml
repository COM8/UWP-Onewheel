<Page
    x:Class="Onewheel.Pages.InfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:chart="using:Telerik.UI.Xaml.Controls.Chart"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel>
                <TextBlock Text="Name:" FontSize="20"/>
                <TextBlock x:Name="name_tbx" TextWrapping="Wrap"/>

                <TextBlock Text="BluetoothAddress:" FontSize="20" Margin="0, 10, 0, 0"/>
                <TextBlock x:Name="btAddress_tbx" TextWrapping="Wrap"/>

                <TextBlock Text="Bluetooth address type:" FontSize="20" Margin="0, 10, 0, 0"/>
                <TextBlock x:Name="btAddressType_tbx" TextWrapping="Wrap"/>

                <TextBlock Text="Connection status:" FontSize="20" Margin="0, 10, 0, 0"/>
                <TextBlock x:Name="connectionStatus_tbx" TextWrapping="Wrap"/>

                <TextBlock Text="Device access status:" FontSize="20" Margin="0, 10, 0, 0"/>
                <TextBlock x:Name="accessStatus_tbx" TextWrapping="Wrap"/>

                <TextBlock Text="Device ID:" FontSize="20" Margin="0, 10, 0, 0"/>
                <TextBlock x:Name="deviceId_tbx" TextWrapping="Wrap"/>

                <TextBlock Text="Battery:" FontSize="20" Margin="0, 10, 0, 0"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="batteryIcon_tbx" Text="&#xEC02;" FontSize="20" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center"/>
                    <TextBlock x:Name="batteryPercent_tbx" Text="Unknown" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="printAll_btn" Content="Print all" Margin="0, 10, 0, 0" Click="printAll_btn_Click"/>
                <Button x:Name="reload_btn" Content="Reload" Margin="0, 10, 0, 0" Click="reload_btn_Click"/>

                <chart:RadCartesianChart Margin="0, 10, 0, 0">
                    <!-- Axis: -->
                    <chart:RadCartesianChart.HorizontalAxis>
                        <chart:DateTimeContinuousAxis MajorStep="1" MajorStepUnit="Minute"/>
                    </chart:RadCartesianChart.HorizontalAxis>
                    <chart:RadCartesianChart.VerticalAxis>
                        <chart:LinearAxis Minimum="0" MajorStep="1"/>
                    </chart:RadCartesianChart.VerticalAxis>

                    <!-- Misc: -->
                    <chart:RadCartesianChart.Grid>
                        <chart:CartesianChartGrid MajorLinesVisibility="XY"/>
                    </chart:RadCartesianChart.Grid>

                    <chart:SplineSeries ItemsSource="{x:Bind speedValues}">
                        <chart:SplineSeries.CategoryBinding>
                            <chart:PropertyNameDataPointBinding PropertyName="dateTime"/>
                        </chart:SplineSeries.CategoryBinding>
                        <chart:SplineSeries.ValueBinding>
                            <chart:PropertyNameDataPointBinding PropertyName="kilometersPerHour"/>
                        </chart:SplineSeries.ValueBinding>
                    </chart:SplineSeries>
                </chart:RadCartesianChart>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
