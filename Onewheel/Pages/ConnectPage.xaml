<Page
    x:Class="Onewheel.Pages.ConnectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Onewheel.Controls"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="status_tbx" Text="Unknown" Margin="10, 0, 0, 0"/>
            <controls:ConnectedBoardControl Grid.Row="1" Margin="10, 10, 10, 0"/>
            <controls:ConnectBoardControl Grid.Row="2" Margin="10, 10, 10, 0"/>
        </Grid>
    </ScrollViewer>
</Page>
