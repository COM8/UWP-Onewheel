<UserControl
    x:Class="Onewheel.Controls.SeperatorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="text_tbx" Text="{x:Bind Text}" Foreground="{ThemeResource CalendarDatePickerTextForeground}" Margin="10,10,0,2" Visibility="Collapsed"/>
        <Rectangle Grid.Row="1" Height="2" HorizontalAlignment="Stretch" Fill="{StaticResource SystemControlDisabledChromeDisabledLowBrush}"/>
    </Grid>
</UserControl>
